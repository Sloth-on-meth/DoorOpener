# DoorOpener Environment Configuration
# Copy this file to .env and customize as needed

# Port configuration (matches config.ini [server] port setting)
# Optional: Set custom port (default: 5000)
DOOROPENER_PORT=5000

# Flask configuration
# Optional: Set Flask secret key for session security (recommended for production)
FLASK_SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false

# When running behind HTTPS (reverse proxy), keep this true so cookies are secure.
# For local HTTP testing only, set to false so the browser will send session cookies.
SESSION_COOKIE_SECURE=true

# Optional: Set timezone (default: UTC)
# Examples: America/New_York, Europe/London, Asia/Tokyo, America/Los_Angeles
TZ=UTC

# Optional: map container runtime user/group to your host user (linuxserver-style)
# This lets the app write to ./logs without host-side chown
PUID=1000
PGID=1000
# Default permissions for created files/dirs
UMASK=002
